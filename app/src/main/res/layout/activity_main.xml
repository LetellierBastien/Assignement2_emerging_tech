<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView android:text="txtView1" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt1"
        android:layout_gravity="bottom"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <TextView android:text="txtView2" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt2"
        android:layout_gravity="bottom"
        android:layout_below="@+id/button1"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignStart="@+id/button1" />

    <com.example.english.myapplication.CustomView
        android:id="@+id/custView"
        android:layout_width="341dp"
        android:layout_height="289dp"
        custom:circleColor="#CCCCCC"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/button1"
        android:layout_alignTop="@+id/button2"
        android:layout_alignLeft="@+id/custView"
        android:layout_alignStart="@+id/custView" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/button2"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/custView"
        android:layout_alignRight="@+id/custView"
        android:layout_alignEnd="@+id/custView" />




</RelativeLayout>
